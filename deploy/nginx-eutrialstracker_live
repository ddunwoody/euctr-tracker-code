upstream eutrialstracker_live {  
    server unix:/tmp/gunicorn-eutrialstracker_live.sock fail_timeout=0;
    keepalive 60;
}

# Redirect HTTP to HTTPS
server {  
    listen 80;
    listen [::]:80;
    server_name eutrialstracker.ebmdatalab.net;

    location / {
        return 301 https://eutrialstracker.ebmdatalab.net$request_uri;
    }
}

# Listen on HTTPS
server {  
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name eutrialstracker_live.tech;

    auth_basic "Private until the paper is published";
    auth_basic_user_file /etc/nginx/htpasswd-eutrialstracker.users;

    access_log /var/log/nginx/eutrialstracker_live.access.log;
    error_log /var/log/nginx/eutrialstracker_live.error.log;

    # SSL parameters generated using https://mozilla.github.io/server-side-tls/ssl-config-generator/

    # certs sent to the client in SERVER HELLO are concatenated in ssl_certificate
    ssl_certificate /etc/letsencrypt/live/eutrialstracker.ebmdatalab.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/eutrialstracker.ebmdatalab.net/privkey.pem;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;

    # modern configuration. tweak to your needs.
    ssl_protocols TLSv1.2;
    ssl_ciphers 'ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA256';
    ssl_prefer_server_ciphers on;

    # HSTS (ngx_http_headers_module is required) (15768000 seconds = 6 months)
    add_header Strict-Transport-Security max-age=15768000;

    # OCSP Stapling ---
    # fetch OCSP records from URL in ssl_certificate and cache them
    ssl_stapling on;
    ssl_stapling_verify on;

    ## verify chain of trust of OCSP response using Root CA and Intermediate certs
    #ssl_trusted_certificate /path/to/root_CA_cert_plus_intermediates;

    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    client_max_body_size 200M;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;

        proxy_pass http://eutrialstracker_live;
    }

    location /static {
        alias   /var/www/eutrialstracker_live/euctr-tracker-code/euctr/static;
        expires max;
        access_log off;
    }
    location /.well-known/acme-challenge {
        alias   /var/www/eutrialstracker_live/letsencrypt/.well-known/acme-challenge;
    }
}
